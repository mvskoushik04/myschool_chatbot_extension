{
    "manifest_version": 3,
    "name": "School Chatbot Assistant",
    "version": "1.0.0",
    "description": "AI-powered chatbot for school portal assistance",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://demo.myschool.in/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://demo.myschool.in/*"],
        "js": ["src/content/index.tsx"]
      }
    ]
  }
  
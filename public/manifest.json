{
    "manifest_version": 3,
    "name": "AI Chatbot Extension",
    "version": "1.0.0",
    "description": "A chatbot extension for web pages",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "action": {
      "default_popup": "index.html",
      "default_title": "Open Chatbot"
    },
    "content_scripts": [
      {
        "matches": ["https://demo.myschool.in/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  